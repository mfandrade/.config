
[window]
dimensions = { columns = 100, lines = 30 }
padding = { x = 5, y = 5 }
decorations = "full"
opacity = 0.4
startup_mode = "Windowed"

[font]
size = 11.0
normal = { family = "JetBrains Mono Nerd Font", style = "Regular" }
bold = { family = "JetBrains Mono Nerd Font", style = "Bold" }
italic = { family = "JetBrains Mono Nerd Font", style = "Italic" }
offset = { x = 0, y = -1 }

[colors]
draw_bold_text_with_bright_colors = false

[selection]
semantic_escape_chars = ",â”‚`|:\"' ()[]{}<>"

[mouse]
hide_when_typing = true

[keyboard]
bindings = [
  { key = "V", mods = "Control|Shift", action = "Paste" },
  { key = "C", mods = "Control|Shift", action = "Copy" }
]

[env]
TERM = "xterm-256color"

[general]
import = [ "~/.config/alacritty/themes/dark.toml" ]

